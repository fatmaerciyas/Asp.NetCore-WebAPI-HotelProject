@model CreateSendMessage


@{
    ViewData["Title"] = "AddSendMessage";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}


<div class="container-fluid">


    <div class="email-left-box">
        <a href="/Admin/ContactAdmin/AddSendMessage" class="btn btn-primary btn-block">Yeni Mesaj oluştur</a>


        @await Html.PartialAsync("SideBarAdminContactPartial")

        <h5 class="mt-5 m-b-10">Categories</h5>
        @await Html.PartialAsync("SideBarAdminContactCategoryPartial")

    </div>

    <div class="email-right-box">
        <div class="toolbar" role="toolbar">
            <div class="btn-group m-b-20">
                <button type="button" class="btn btn-light">
                    <i class="fa fa-archive"></i>
                </button>
                <button type="button" class="btn btn-light">
                    <i class="fa fa-exclamation-circle"></i>
                </button>
                <button type="button" class="btn btn-light">
                    <i class="fa fa-trash"></i>
                </button>
            </div>
            <div class="btn-group m-b-20">
                <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown">
                    <i class="fa fa-folder"></i>  <b class="caret m-l-5"></b>
                </button>
                <div class="dropdown-menu">
                    <span class="dropdown-header">Git</span>
                    <a class="dropdown-item" href="javascript: void(0);">Sosyal</a>
                    <a class="dropdown-item" href="javascript: void(0);">Promosyonlar</a>
                    <a class="dropdown-item" href="javascript: void(0);">Güncellenenler</a>
                    <a class="dropdown-item" href="javascript: void(0);">Forumlar</a>
                </div>
            </div>


            <div class="btn-group m-b-20">
                <button type="button" class="btn btn-light">
                    Daha fazla
                </button>

            </div>
        </div>
        <div class="compose-content mt-5">
            <form method="post">
                <div class="form-group">
                    <input type="text" class="form-control bg-transparent" name="ReceiverMail" placeholder=" Alıcı Mail Adresi">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control bg-transparent" name ="ReceiverName" placeholder=" Alıcı Adı Soyadı">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control bg-transparent" name="Title" placeholder=" Konu">
                </div>
               
                <div class="form-group">
                    <textarea class="textarea_editor form-control bg-light" rows="15" name="Content" placeholder="Mesajınızı buraya yazınız..."></textarea>
                </div>

                @*  <h5 class="m-b-20"><i class="fa fa-paperclip m-r-5 f-s-18"></i> Attatchment</h5>
                <form action="#" class="dropzone">
                <div class="form-group">
                <div class="fallback">
                <input class="l-border-1" name="file" type="file" multiple="multiple">
                </div>
                </div>
                </form>*@

                <div class="text-left m-t-15">
                    <button class="btn btn-primary m-b-30 m-t-15 f-s-14 p-l-20 p-r-20 m-r-10"><i class="fa fa-paper-plane m-r-5"></i> Gönder</button>
                </div>
            </form>
        </div>
    </div>
</div>
