@model IEnumerable<UpdateRoomDto>
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}



<form method="post">
    <input type="hidden" asp-for="RoomId" />
    <div class="form-group">
        <label for="">Oda Numarası</label>
        <input type="text" asp-for="RoomNumber" class="form-control" placeholder="Personel Adı">
    </div>
    <div class="form-group">
        <label for="">Oda Başlığı</label>
        <input type="text" asp-for="Title" class="form-control" placeholder="Personel Unvanı">
    </div>
    <div class="form-group">
        <label for=""> Fiyat</label>
        <input type="text" asp-for="Price" class="form-control" placeholder="Sosyal Medya 1">
    </div>
    <div class="form-group">
        <label for=""> Yatak Odası Sayısı </label>
        <input type="text" asp-for="BedCount" class="form-control" placeholder="Sosyal Medya 2">
    </div>
    <div class="form-group">
        <label for="">Oda Kapak Fotoğrafı</label>
        <input type="text" asp-for="RoomCoverImage" class="form-control" placeholder="Sosyal Medya 3">
    </div>
    <div class="form-group">
        <label for="">Banyo Sayısı</label>
        <input type="text" asp-for="BathCount" class="form-control" placeholder="Sosyal Medya 3">
    </div>
    <div class="form-group">
        <label for="">Açıklama</label>
        <input type="text" asp-for="Description" class="form-control" placeholder="Sosyal Medya 3">
    </div>




    <button class="btn btn-primary">Ekle</button>
</form>

